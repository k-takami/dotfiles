Style/HashSyntax:
  Enabled: false
# 文字列は"
Style/StringLiterals:
  Enabled: false
#ruby 1.8系で文法エラー
Style/SymbolArray:
  Enabled: false
#Proc.newをprocニ置き換えるの規則も非現実的
# 文字列 and return をつかいたいので && || を必ずしも推奨しない
Style/AndOr:
  Enabled: false

